
<h1>Books#edit</h1>
<p>Find me in app/views/books/edit.html.erb</p>

<h2>Book編集</h2>

<!--バリテーションの実装＞投稿の更新が失敗した時-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <label for="Title">Title</label>
  <%= f.text_field :title, autofocus: true, id:"Title", placeholder:"本のタイトル" %>
  <label for="Body">Body</label>
  <%= f.file_field :body, autofocus: true, id:"Body", placeholder:"感想" %>
  <%= f.submit "変更を保存" %>
<% end %>

